@model ItemApiProject.Models.Category
@{
    ViewData["Title"] = "CreateCategory";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h1>Создайте новую категорию</h1>
<form asp-controller="Categories" asp-action="CreateCategory" method="post">
    <div class="form-group">
        <div>
            <label asp-for="Name">Наименование категории:</label>
        </div>
        <div>
            <input asp-for="Name" />
        </div>
        <br />
        <input type="submit" value="Add Category" class="btn btn-sm btn-primary" />
    </div>
</form>


