@model ItemGUI.ViewModels.CategoryItemsViewModel
@{
    ViewData["Title"] = "GetCategoryById";
}


<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h4>@ViewBag.Message</h4>
<h3>@ViewBag.SuccessMessage</h3>
<div>
    <h1>Детали Категории</h1>
    <br />
    <div>
        <p>
            <strong>Наименование Категории:</strong> @Model.Category.Name
        </p>
        <div class="form-group text-center">
            <a class="btn btn-sm btn-danger" asp-controller="Categories" asp-action="DeleteCategory"
               asp-route-categoryId="@Model.Category.Id">Удалить Категорию</a>
        </div>
    </div>
    <br /><br />
    <div>
        <h4>@ViewBag.ItemMessage</h4>
        @foreach (var item in Model.Items)
        {
            <div>
                <p>
                    <strong>Наименование товара:</strong>
                    <span>@item.Title</span>
                    <a asp-controller="Home" asp-action="GetItemById"
                       asp-route-itemId="@item.Id">Детали товара</a>
                </p>
            </div>
        }
    </div>
</div>

